@{
    ViewData["Title"] = "Create a question";
}
@model RateYourFriends.Controllers.QuestionController.QuestionInputModel

<div class="text-center">
    <h1 class="display-4">Create a question</h1>
    <form id="questionForm" asp-route-returnUrl="Index" method="post">
        <h2>Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Question" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Question">Question</label>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>

        <input type="text" hidden="hidden" asp-for="ParticipantIds" value="1"/>
        <input type="text" hidden="hidden" asp-for="ParticipantIds" value="2"/>
        <input type="text" hidden="hidden" asp-for="ParticipantIds" value="3"/>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create Question</button>
    </form>
</div>